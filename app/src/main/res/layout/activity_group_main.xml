<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Group.GroupMainActivity">

    <FrameLayout
        android:id="@+id/ly_top_bar"
        style="@style/FragmentTop">

        <ImageView
            android:id="@+id/group_back"
            style="@style/Left" />

        <TextView
            android:id="@+id/txt_topbar"
            style="@style/Center"
            android:text="发现" />

        <ImageView
            android:id="@+id/group_serach"
            style="@style/Right"
            android:src="@mipmap/all_search"
            android:visibility="invisible" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/ly_top_bar"
        android:layout_weight="1" />

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.ashokvarma.bottomnavigation.BottomNavigationBar>


</LinearLayout>