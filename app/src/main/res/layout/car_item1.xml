<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0.2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp">

            <ImageView
                android:id="@+id/car_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/all_longding" />

            <TextView
                android:id="@+id/car_item_PromotionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:gravity="center"
                android:paddingBottom="1.5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1.5dp"
                android:singleLine="false"
                android:text="销售方式"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxEms="14"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/car_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我是价格"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_item_VipPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="会员价格"
                    android:textColor="@color/actionsheet_red"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/car_item_add"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_item_remove"
                    android:layout_width="@dimen/car_item_add"
                    android:layout_height="@dimen/car_item_add"
                    android:src="@drawable/car_item_remove" />

                <TextView
                    android:id="@+id/car_item_count"
                    android:layout_width="@dimen/car_item_edit"
                    android:layout_height="@dimen/car_item_add"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/car_item_add"
                    android:layout_width="@dimen/car_item_add"
                    android:layout_height="@dimen/car_item_add"
                    android:src="@drawable/car_item_add" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_grey"></View>
</android.support.v7.widget.CardView>