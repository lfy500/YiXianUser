<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout style="@style/FragmentTop">

        <ImageView
            android:id="@+id/new_return"
            style="@style/Left" />

        <TextView
            style="@style/Center"
            android:text="设置支付密码" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="请输入密码:"
        android:textSize="15dp" />

    <com.example.lfy.myapplication.FragmentMine.balance.PasswordInputView
        android:id="@+id/my_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="#cccccc"
        app:pivBorderRadius="10dp"
        app:pivBorderWidth="10dp"
        app:pivPasswordColor="#cccccc"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="再次输入密码:"
        android:textSize="15dp" />

    <com.example.lfy.myapplication.FragmentMine.balance.PasswordInputView
        android:id="@+id/my_password2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="#cccccc"
        app:pivBorderRadius="10dp"
        app:pivBorderWidth="10dp"
        app:pivPasswordColor="#cccccc"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    <Button
        android:id="@+id/sure"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_green"
        android:text="确定" />

</LinearLayout>