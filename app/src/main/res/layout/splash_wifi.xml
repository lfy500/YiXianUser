<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_fruit_liner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/all_longding" />

        <Button
            android:id="@+id/home_fruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="刷新试试" />
    </LinearLayout>

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_width"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_home"
            style="@style/RadioButton"
            android:checked="true"
            android:drawableTop="@drawable/main_home_tab"
            android:text="@string/bottom_home" />

        <RadioButton
            android:id="@+id/main_classify"
            style="@style/RadioButton"
            android:drawableTop="@drawable/main_classify_tab"
            android:text="@string/bottom_classify" />

        <RadioButton
            android:id="@+id/main_car"
            style="@style/RadioButton"
            android:drawableTop="@drawable/main_car_tab"
            android:text="@string/bottom_car" />

        <RadioButton
            android:id="@+id/main_order"
            style="@style/RadioButton"
            android:drawableTop="@drawable/main_order_tab"
            android:text="@string/bottom_order" />

        <RadioButton
            android:id="@+id/main_mine"
            style="@style/RadioButton"
            android:drawableTop="@drawable/main_mine_tab"
            android:text="@string/bottom_mine" />

    </RadioGroup>
</FrameLayout>